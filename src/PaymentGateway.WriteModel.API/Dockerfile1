FROM mcr.microsoft.com/dotnet/core/aspnet:3.1 AS base
WORKDIR /app
EXPOSE 80

FROM mcr.microsoft.com/dotnet/core/sdk:3.1 AS build-commands
WORKDIR /src
COPY ["/PaymentGateway.Commands/PaymentGateway.Commands.csproj.csproj","PaymentGateway.Commands/"]
RUN dotnet restore "PaymentGateway.Commands/PaymentGateway.Commands.csproj"
COPY . .
WORKDIR "/src/PaymentGateway.WriteModel.API"
RUN dotnet build "PaymentGateway.WriteModel.API.csproj" -c Release -o /app/build-commands

FROM mcr.microsoft.com/dotnet/core/sdk:3.1 AS build
WORKDIR /src
COPY ["PaymentGateway.WriteModel.API.csproj","PaymentGateway.WriteModel.API/"]
RUN dotnet restore "PaymentGateway.WriteModel.API/PaymentGateway.WriteModel.API.csproj"
COPY . ./
WORKDIR "/src/PaymentGateway.WriteModel.API"
RUN dotnet build "PaymentGateway.WriteModel.API.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "PaymentGateway.WriteModel.API.csproj" -c Release -o /app/publish

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "PaymentGateway.WriteModel.API.dll"]
